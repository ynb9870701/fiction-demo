.swiper{
  height: 300rpx;
  width: 100%;
}
.swiper image{
  width: 100%;
  height: 100%;
}
/* 导航栏 */
.nav{
    display: flex;
    align-items: center;
    padding: 20rpx;
    background-color: #fff;
}
.nav-item{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
/* 阅读喜好 */
.read-like{
    padding: 40rpx;
    margin-top: 20rpx;
    background: #fff;
}
.read-like-box{
    display: flex;
    flex-direction: column;
    position: relative;
    align-items: center;
    padding: 20rpx;
    border-bottom: 2rpx solid #F5F0F0;
}
    /* 设置按钮 */
.set-btn{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}
/* 列表 */
.item{
    background-color: #fff;
    padding: 20rpx;
    margin-bottom: 20rpx;
}
.item-title{

}
.item-con{
    display: flex;
    padding: 40rpx 0;
    border-bottom: 2rpx solid #F5F0F0;
}
.item-con-box{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.item-con-box image{
    width: 200rpx;
    height: 200rpx;
}
.item-more{
    text-align: center;
}